{
  "name": "uxl-core",
  "version": "0.1.2",
  "description": "Core parser and transpiler for the UXL language",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "license": "Apache-2.0",
  "author": "Viacheslav Soldatov viacheslavsoldatov@gmail.com",
  "files": ["dist/", "Readme.md", "LICENSE"],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist tmp && mkdir -p dist tmp",
    "build:parser": "nearleyc -s Project src/grammar/grammar.ne -o src/grammar/parser.cjs",
    "build:bundle": "esbuild src/entry.js --bundle --format=esm --platform=neutral --main-fields=module,main --external:nearley --external:moo --outfile=dist/index.js",
    "build": "npm run clean && npm run build:parser && npm run build:bundle",
    "prepublishOnly": "npm run build",
    "test": "node --test"
  },
  "dependencies": {
    "nearley": "^2.20.1",
    "moo": "^0.5.2"
  },
  "devDependencies": {
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0"
  }
}
